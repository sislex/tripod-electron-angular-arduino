{
  "name": "tripod-electron-angular-arduino",
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --configuration production",
    "build": "ng build",
    "build:prod": "ng build --configuration production --base-href ./",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron-build": "ng build --base-href ./ && electron electron/main.js",
    "electron-build:prod": "npm run build:prod && electron electron/main.js",
    "electron-start": "electron electron/main.js --mode=dev",
    "electron-angular-start": "concurrently \"npm run start\" \"wait-on http://localhost:4200 && electron electron/main.js --mode=dev\"",
    "electron-angular:prod-start": "concurrently \"npm run start:prod\" \"wait-on http://localhost:4200 && electron electron/main.js --mode=dev\"",
    "storybook:ui": "ng run ui:storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.8",
    "@angular/cdk": "^17.0.4",
    "@angular/common": "^17.0.8",
    "@angular/compiler": "^17.0.8",
    "@angular/core": "^17.0.8",
    "@angular/forms": "^17.0.8",
    "@angular/material": "^17.0.4",
    "@angular/platform-browser": "^17.0.8",
    "@angular/platform-browser-dynamic": "^17.0.8",
    "@angular/router": "^17.0.0",
    "@ngrx/effects": "^17.0.0",
    "@ngrx/store": "^17.0.0",
    "@ngrx/store-devtools": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.8",
    "@angular/cli": "^17.0.8",
    "@angular/compiler-cli": "^17.0.8",
    "@compodoc/compodoc": "^1.1.23",
    "@storybook/addon-docs": "^7.6.3",
    "@storybook/addon-essentials": "^7.6.3",
    "@storybook/addon-interactions": "^7.6.3",
    "@storybook/addon-links": "^7.6.3",
    "@storybook/angular": "^7.6.3",
    "@storybook/blocks": "^7.6.3",
    "@storybook/test": "^7.6.3",
    "@types/jasmine": "~4.3.0",
    "concurrently": "^8.2.2",
    "electron": "^27.0.3",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.9",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serialport": "^12.0.0",
    "storybook": "^7.6.3",
    "typescript": "~5.2.2",
    "wait-on": "^7.1.0"
  }
}
